<ErrorScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            spacing: 4
        
            MDTopAppBar:
                id: toolbar
                title: app.loc.TITLE
                right_action_items: [["menu", lambda x: app.navigation_menu.set_state("open")]]
            
            MDProgressBar:
                id: progressbar
                color: app.theme_cls.accent_dark

        ScrollView:
            MDList:
                id: mdlist_tracks